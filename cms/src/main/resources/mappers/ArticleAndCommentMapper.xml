<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.roud.cms.mapper.ArticleAndCommentMapper">

    <resultMap id="CommentWithSubResult" type="top.roud.cms.entity.Comment">
        <id property="id" column="cid"/>
        <result property="content" column="content"/>
        <result property="time" column="time"/>
        <result property="article_id" column="article_id"/>
        <result property="parent_id" column="parent_id"/>
        <result property="from" column="from"/>
        <result property="to" column="to"/>
        <collection property="child_comments" resultMap="CommentResult"/>
    </resultMap>
    <resultMap id="CommentResult" type="top.roud.cms.entity.Comment">
        <id property="id" column="sub_id"/>
        <result property="content" column="sub_content"/>
        <result property="time" column="sub_time"/>
        <result property="article_id" column="sub_article_id"/>
        <result property="parent_id" column="sub_parent_id"/>
        <result property="from" column="sub_from"/>
        <result property="to" column="sub_to"/>
    </resultMap>

    <insert id="insertComment">
        insert into rb_comment(id, content, time, from, parent_id, to, article_id) values (#{id}, #{content},#{time}, #{from.id}, #{parent_comment.id}, #{to.id}, #{article_id});
    </insert>

    <select id="findAllCommentsByArticle" resultMap="CommentWithSubResult">
        select
            c.id,c.time,c.content,c.from,c.to, c.parent_id, c.article_id,c1.id sub_id,
               c1.time sub_time,c1.content sub_content,c1.from sub_from,c1.to sub_to, c1.parent_id sub_parent_id, c1.article_id sub_article_id
        from rb_comment c,rb_comment c2
        where
            c.parent_id=0
          and
            c.id=c1.parent_id
          and
              c.article_id = #{article_id}
    </select>

</mapper>